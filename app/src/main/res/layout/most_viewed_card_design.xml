<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/ms_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hospital_png" />

        <TextView
            android:id="@+id/ms_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ms_image"
            android:fontFamily="@font/baloo"
            android:textColor="@color/colorAccent"
            android:text="SMS Hospital"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/mv_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ms_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ms_image"
            android:rating="4" />

        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bncbmnvcmn vbcmnvbxcmn mncbvnb nmmncb vnbnmm ncbvnb nmmncbvnbnm mncbvnbnm"
            android:layout_toRightOf="@id/ms_image"
            android:layout_below="@id/mv_rating"
            android:padding="10dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>